    <body>
        <section id="Jumbo">
            <h3 class="whitetext">- Local to Alpine, OR -</h3>
            <h1 class="whitetext"><div>LANDSCAPING</div><div> AND</div><div></div> GARDEN</div></h1>
            <h3 class="whitetext">- 100% SERVICE GUARANTEE -</h3>
            <a href="#relnav"><img id="doubledown" src="icon-down-arrow.png"></a>
        </section>
    
         <nav id="relnav">
            <a href="#Jumbo"><i class="fas fa-tree"></i></a>
